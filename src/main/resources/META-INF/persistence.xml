<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="persistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.esupportail.sgc.domain.Card</class>
        <class>org.esupportail.sgc.domain.EsupNfcTagLog</class>
        <class>org.esupportail.sgc.domain.TemplateCard</class>
        <class>org.esupportail.sgc.domain.SgcHttpSession</class>
        <class>org.esupportail.sgc.domain.AppliConfig</class>
        <class>org.esupportail.sgc.domain.ExportBean</class>
        <class>org.esupportail.sgc.domain.BigFile</class>
        <class>org.esupportail.sgc.domain.CardActionMessage</class>
        <class>org.esupportail.sgc.domain.EscPerson</class>
        <class>org.esupportail.sgc.domain.Log</class>
        <class>org.esupportail.sgc.domain.CrousPatchIdentifier</class>
        <class>org.esupportail.sgc.domain.Prefs</class>
        <class>org.esupportail.sgc.domain.CrousSmartCard</class>
        <class>org.esupportail.sgc.domain.PhotoFile</class>
        <class>org.esupportail.sgc.domain.PayBoxForm</class>
        <class>org.esupportail.sgc.domain.User</class>
        <class>org.esupportail.sgc.domain.PayboxTransactionLog</class>
        <class>org.esupportail.sgc.domain.EsupNfcSgcJwsDevice</class>
        <class>org.esupportail.sgc.domain.AppliVersion</class>
        <class>org.esupportail.sgc.domain.LogMail</class>
        <class>org.esupportail.sgc.domain.Printer</class>
        <class>org.esupportail.sgc.domain.EscPersonOrganisationUpdateView</class>
        <class>org.esupportail.sgc.domain.NavBarApp</class>
        <class>org.esupportail.sgc.domain.EscCard</class>
        <class>org.esupportail.sgc.services.crous.CrousErrorLog</class>
        <class>org.esupportail.sgc.services.crous.CrousRule</class>
        <class>org.esupportail.sgc.services.crous.CrousRuleConfig</class>
        <properties>
            <property name="hibernate.dialect" value="org.esupportail.sgc.postgres.PgFullTextDialect"/>
            <!-- value="create" to build a new database on each run; value="update" to modify an existing database; value="create-drop" means the same as "create" but also drops tables when Hibernate closes; value="validate" makes no changes to the database -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.physical_naming_strategy" value="org.hibernate.boot.model.naming.CamelCaseToUnderscoresNamingStrategy"/>
            <property name="hibernate.id.new_generator_mappings" value="false"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
            <property name="hibernate.jdbc.use_streams_for_binary" value="true"/>
            <property name="hibernate.hbm2ddl.import_files_sql_extractor" value="org.hibernate.tool.hbm2ddl.SingleLineSqlCommandExtractor"/>
            <!-- Uncomment the following two properties for JBoss only -->
            <!-- property name="hibernate.validator.apply_to_ddl" value="false" /-->
            <!-- property name="hibernate.validator.autoregister_listeners" value="false" /-->
            <!-- Uncomment for logs queries ...
            <property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.use_sql_comments" value="true"/>
			-->
        </properties>
    </persistence-unit>
</persistence>
